{
  "name": "bitrealm",
  "version": "1.0.0",
  "description": "Browser-native, plugin-ready, open-source MMORPG builder",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "vite",
    "build": "vite build",
    "start": "node server/index.js",
    "test": "jest",
    "docker:build": "docker build -t bitrealm .",
    "docker:run": "docker-compose up"
  },
  "keywords": [
    "mmorpg",
    "game-builder", 
    "multiplayer",
    "colyseus",
    "pixijs",
    "browser-game",
    "javascript",
    "open-source"
  ],
  "author": "bitrealm contributors",
  "license": "MIT",
  "dependencies": {
    "@colyseus/core": "^0.15.0",
    "@colyseus/ws-transport": "^0.15.0",
    "@colyseus/monitor": "^0.15.0",
    "@colyseus/playground": "^0.15.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/static": "^6.6.1",
    "@fastify/websocket": "^7.1.2",
    "@trpc/server": "^10.9.0",
    "@trpc/client": "^10.9.0",
    "fastify": "^4.13.0",
    "pixi.js": "^7.2.4",
    "howler": "^2.2.3",
    "pg": "^8.8.0",
    "redis": "^4.5.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "nanoid": "^4.0.0",
    "lz-string": "^1.5.0",
    "jszip": "^3.10.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.0",
    "helmet": "^6.0.1",
    "rate-limiter-flexible": "^2.4.1"
  },
  "devDependencies": {
    "vite": "^4.2.0",
    "nodemon": "^2.0.21",
    "concurrently": "^7.6.0",
    "jest": "^29.4.3",
    "eslint": "^8.36.0",
    "prettier": "^2.8.4"
  }
}